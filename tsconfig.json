{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "./src/__test__/**"],
  "include": ["src"]
}
